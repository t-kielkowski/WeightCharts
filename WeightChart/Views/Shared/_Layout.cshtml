                    <i class="fa fa-flask" aria-hidden="true"></i>
                    <span>Hives</span>
                </a>
            </li>

            <li>
                <ul id="hives" class="sub-menu collapse @if(Context.Request.Path.ToString().Contains("hives/")) {
                @Html.Raw("in") }">
